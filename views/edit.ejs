<% include partials/header.ejs %>
<br>
<form action="/items/<%=result[0].item_id%>" class="container"  method="POST">
	<br>
	<h1 class="form-group col-md-8"> Edit item</h1>
	<div class="form-group col-md-6">
		<label>Item Name</label>
		<input class="form-control" type="text" name="name" value="<%=result[0].i_name%>">
	</div>
	<div class="form-group col-md-6">
	    <label for="decsription">Decsription</label>
	    <textarea class="form-control" id="decsription" name="description" rows="3"><%=result[0].i_desc%></textarea>
	</div>
	<div class="form-group col-md-6">
	    <label for="WhereTo">Where To?</label>
	    <textarea class="form-control" id="WhereTo" name="to" rows="2"><%=result[0].i_to%></textarea>
	</div>
	<div class="form-group col-md-6">
	    <label for="From">From</label>
	    <textarea class="form-control" id="From" name="from" rows="2"><%=result[0].i_from%></textarea>
	</div>
	<div class="form-group col-md-6">
		<label>Item type</label>
		<input class="form-control" type="text" name="type" value="<%=result[0].i_type%>">
	</div>
	<div class="form-group col-md-4">
		<button class="btn btn-warning active"> Update Item </button>
		<a class="text-dark form-group col-md-6" href="/myitems"> <small>Go Back</small></a>
	</div>		
</form>

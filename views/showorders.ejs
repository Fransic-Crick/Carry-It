<% include partials/header.ejs %>
	<br>
	<% if (result.length==0) { %>
		<div id="empty" align="center" class="alert alert-danger container" role="alert">
			<h1 class="text-monospace">No orders found !</h1>
		</div>
	<% } %>
	<% result.forEach(function(item){ %>
	<form class="container" action="/status/<%= item.item_id %>" method="POST">
		<br>
	<div id="greencard" class="alert alert-success" role="alert">
	  <h1 class="alert-heading">Your Order Details</h1>
	  <hr>
	  <div class="form-row">
	  	<div class="form-group col-md-4">
	  		<p class="text-info"><span>OrderId : </span><%= item.order_id %></p>
	  	</div>
	  	<div class="form-group col-md-4">
	  		<p class="text-info"><span>ItemId : </span><%= item.item_id %></p>
	  	</div>
	  </div>
	  <div class="form-row">
	  	<div class="form-group col-md-4">
	  		<h4 class="text-info"><%= item.i_name %></h4>
	  	</div>
	  </div>
	  <div class="form-row">
	  	<div class="form-group col-md-10">
	  		<h6 class="text-info"><span>Details : </span><%= item.i_desc %></h6>
	  	</div>
	  </div>
	  <div class="form-row">
	  	<div class="form-group col-md-4">
	  		<h6 class="text-danger"><span>Customer : </span><%=item.u_fname%> <%=item.u_lname%></h6>
	  	</div>
	  	<div class="form-group col-md-8">
	  		<h6 class="text-primary"> <span>Contact : </span> <%= item.u_mobile %> <br><span>Email : </span><%= item.u_email%></h6>
	  	</div>
	  </div>
	  <div class="form-row">
	  	<div class="form-group col-md-4">
	  		<h6 class="text-danger"><span>Place to be delivered :</span> <b><%= item.i_to %></b></h6>
	  	</div>
		<div class="form-group col-md-6">
	  		<h6 class="text-success"><span>Status: </span><%= item.i_status %></h6>
	  	</div>
	  </div>
	  <div class="form-row">
		<div class="form-group col-md-10">
	  		<h5 class="text-success"><span>Estimated date: </span><%= item.estimated_date %></h5>
	  	</div>
	  </div>
		<button class="btn btn-success" type="submit">Make it as DELIVERED</button>
	</div>
	</form>
	<% }); %>
</div>
<% include partials/footer.ejs %>
<% include partials/header.ejs %>
		<br>
		<% result.forEach(function(item){ %>
		<form class="container" action="/status/<%= item.item_id %>" method="POST">
			<br>
		<div class="alert alert-success" role="alert">
		  <h1 class="alert-heading">Order Details</h1>
		  <hr>
		  <div class="form-row">
		  	<div class="form-group col-md-4">
		  		<h4 class="text-info"><span>OrderId : </span><%= item.order_id %></h4>
		  	</div>
		  	<div class="form-group col-md-4">
		  		<h4 class="text-info"><span>ItemId : </span><%= item.item_id %></h4>
		  	</div>
		  </div>
		  <div class="form-row">
		  	<div class="form-group col-md-4">
		  		<h2 class="text-info"><%= item.i_name %></h2>
		  	</div>
		  </div>
		  <div class="form-row">
		  	<div class="form-group col-md-10">
		  		<h4 class="text-info"><span>Details : </span><%= item.i_desc %></h4>
		  	</div>
		  </div>
		  <hr>
		  <div class="form-row">
		  	<div class="form-group col-md-4">
		  		<h5 class="text-danger"><span>Customer : </span><%=item.u_fname%> <%=item.u_lname%></h5>
		  	</div>
		  	<div class="form-group col-md-8">
		  		<h5 class="text-primary"> <span>Contact : </span> <%= item.u_mobile %> <br><span>Email : </span><%= item.u_email%></h5>
		  	</div>
		  </div>
		  <div class="form-row">
		  	<div class="form-group col-md-4">
		  		<h5 class="text-danger"><span>Place to be delivered :</span> <b><%= item.i_to %></b></h5>
		  	</div>
			<div class="form-group col-md-6">
		  		<h5 class="text-success"><span>Status: </span><%= item.i_status %></h5>
		  	</div>
		  </div>
		  <div class="form-row">
			<div class="form-group col-md-10">
		  		<h5 class="text-success"><span>Estimated date: </span><%= item.estimated_date %></h5>
		  	</div>
		  </div>
			<button class="btn btn-success" type="submit">Make it as DELIVERED</button>
		</div>
		</form>
		<% }); %>
	</div>
<% include partials/footer.ejs %>
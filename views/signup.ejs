<% include partials/header.ejs %>
	<br><br>
	<form action="/signup" class="container" method="POST">
		<br>
		<h1>Signup Form <i class="fa fa-users"></i> </h1>
		<div class="form-row">
			<div class="form-group col-md-4">
				<label for="inputName1">Firstname</label>
				<input type="text" name="fname" class="form-control" id="inputName1" placeholder="Your Firstname" required>
			</div>
			<div class="form-group col-md-4">
				<label for="inputName2">Lastname</label>
				<input type="text" name="lname" class="form-control" id="inputName2" placeholder="Your Lastname">
			</div>	  	
		</div>
		<div class="form-row">
			<div class="form-group col-md-4">
	 			 <label for="inputEmail4">Email</label>
	  			<input type="email" name="email" class="form-control" id="inputEmail4" placeholder="example@gmail.com" required>
			</div>
			<div class="form-group col-md-4">
	  			<label for="inputPassword4">Password</label>
	 			<input type="password" name="password" class="form-control" id="inputPassword4" placeholder="Keep a strong password" required>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-8">
	  			<label for="inputNum">Mobile</label>
	  			<input type="tel" name="mobile" class="form-control" id="inputNum" placeholder="10 digits number" required>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group form-check">
				<input type="checkbox" class="form-check-input" id="exampleCheck1" required>
				<label class="form-check-label" for="exampleCheck1"><small>I agree to terms and conditions</small></label>
			</div>
		</div>
	<button type="submit" class="btn btn-success">Register</button>
	<br><br>
	</form>
